<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anmol.motiontracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RightThumbActivity"
            android:label="@string/title_activity_right_thumb"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RightIndexActivity"
            android:label="@string/title_activity_right_index"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LeftThumbActivity"
            android:label="@string/title_activity_left_thumb"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LeftIndexActivity"
            android:label="@string/title_activity_left_index"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FinalActivity"
            android:label="@string/title_activity_final"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>