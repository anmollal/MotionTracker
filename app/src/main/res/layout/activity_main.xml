<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anmol.motiontracker.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="25dp"
        android:text="Welcome to the HandWich Data Collection App!"
        android:textAlignment="center"
        android:textSize="30dp"
        android:id="@+id/main_text_view"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Thank you for participating in our data collection."
        android:layout_centerHorizontal="true"
        android:id="@+id/main_text_view_sub"
        android:layout_below="@+id/main_text_view"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        />

    <Button
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/main_text_view_sub"
        android:layout_marginTop="16dp"
        android:text="Let's Get Started" />

</RelativeLayout>
